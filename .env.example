# ============ CHAVES DE API ============
MAIN_PUBLIC_KEY=
AGENT_PRIVATE_KEY_B58=

# ============ ENDPOINTS ============
REST_URL=https://api.pacifica.fi/api/v1
WS_URL=wss://ws.pacifica.fi/ws

# ============ TRADING BÁSICO ============
SYMBOL=SOL
LEVERAGE=10
BASE_CURRENCY=USDC

# ============ ESTRATÉGIA ============
# Tipos: "pure_grid" (grid clássico) ou "market_making" (grid dinâmico)
STRATEGY_TYPE=market_making

# Modo: "maker" (economia em taxas) ou "taker" (execução rápida)
GRID_MODE=maker

# ============ ESTRUTURA DO GRID ============

# Número total de níveis (será dividido 50/50 entre buy/sell se symmetric)
GRID_LEVELS=8

# Espaçamento entre níveis (em porcentagem)
# Ex: 0.5 = 0.5% entre cada nível
GRID_SPACING_PERCENT=0.2

# Distribuição do grid
# Opções: "symmetric" (50/50), "bullish" (60% buy), "bearish" (60% sell)
GRID_DISTRIBUTION=symmetric

# ============ PURE GRID - CONFIGURAÇÕES ============
# (Apenas se STRATEGY_TYPE=pure_grid)

# Range de preços para o grid
RANGE_MIN=90000
RANGE_MAX=110000

# Parar bot se preço sair do range?
RANGE_EXIT=true

# ============ MARKET MAKING - CONFIGURAÇÕES ============
# (Apenas se STRATEGY_TYPE=market_making)

# Percentual de movimento para deslocar o grid
# Ex: 1.0 = move o grid se preço variar 1%
GRID_SHIFT_THRESHOLD_PERCENT=1.0

# ============ TAMANHO DAS ORDENS ============

# Tamanho de cada ordem em USD (valor notional)
ORDER_SIZE_USD=15

# Tamanho mínimo de ordem
MIN_ORDER_SIZE=10

# Modo de capital
# "fixed" = usa ORDER_SIZE_USD fixo
# "percentage" = divide o saldo disponível
CAPITAL_MODE=fixed

# Se CAPITAL_MODE=percentage, quanto do saldo usar (%)
CAPITAL_PERCENTAGE=90

# ============ GERENCIAMENTO DE RISCO ============

# Margem de segurança (% do saldo a reservar)
# Ex: 20 = reserva 20% do saldo como margem de segurança
MARGIN_SAFETY_PERCENT=20

# Reduzir exposição automaticamente se margem baixa?
AUTO_REDUCE_ON_LOW_MARGIN=true

# Posição máxima total em USD
MAX_POSITION_SIZE_USD=1000

# Número máximo de ordens abertas
MAX_OPEN_ORDERS=20

# ============ REBALANCEAMENTO ============

# Rebalancear automaticamente?
AUTO_REBALANCE=true

# Intervalo entre rebalanceamentos (em segundos)
# 60 = a cada minuto
REBALANCE_INTERVAL_SECONDS=60

# ============ COMPORTAMENTO DO BOT ============

# Verificar saldo antes de cada ordem?
CHECK_BALANCE_BEFORE_ORDER=true

# Nível de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============ FEES (INFORMATIVO) ============
# Usado para cálculos de lucro

MAKER_FEE=0.0002  # 0.02%
TAKER_FEE=0.0007  # 0.07%

# ============ TIMEOUTS ============
API_TIMEOUT=30

# ============ LIMPEZA DE ORDENS ============
# Limpeza de ordens ao iniciar
CLEAN_ORDERS_ON_START=false  # true para cancelar todas ao iniciar

# Grid Adaptativo
ADAPTIVE_GRID=true
VOLATILITY_WINDOW=20
VOLATILITY_MULT_MIN=0.5
VOLATILITY_MULT_MAX=2.0


